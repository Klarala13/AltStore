PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# Supabase — get from: supabase.com > project > settings > database
# Use the "Transaction pooler" URL for DATABASE_URL (port 6543)
# Use the "Direct connection" URL for DIRECT_URL (port 5432)
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:6543/postgres?pgbouncer=true
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-eu-central-1.pooler.supabase.com:5432/postgres

# JWT — generate with: openssl rand -base64 64
JWT_SECRET=change-me

# Shared secret for internal Next.js → NestJS calls
INTERNAL_API_KEY=change-me

# Cloudflare R2 — get from: dash.cloudflare.com > R2 > Manage API tokens
CF_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY=your-r2-access-key-id
R2_SECRET_KEY=your-r2-secret-access-key
R2_BUCKET=altstore-apks

# VirusTotal — get from: virustotal.com > profile > API key
# Free tier: 4 lookups/min, 500 analyses/day
VT_API_KEY=your-virustotal-api-key

# Redis — for BullMQ async scan queue
# Upstash free tier: 10,000 commands/day
# Get from: console.upstash.com > Redis > database > REST URL
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your-upstash-redis-password  # required for Upstash
# REDIS_TLS=true                               # set to true for Upstash (TLS required)

# GDPR: monthly rotating salt for IP hashing (SHA-256)
# Rotate this value each month; store old values for log lookups if needed
# Generate with: openssl rand -hex 32
IP_HASH_SALT=change-me-monthly
